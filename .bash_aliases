# ls aliases
alias l='ls --color -F'
alias ll='ls --color -lFAh'
alias la='ls --color -FA'
alias lr='ls --color -FAR'
alias lt='ls --color -ltFAh'
alias lS='ls --color -1FSs'

# grep aliases
alias rg='rg --color=auto'
alias grep='rg --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# cd aliases
alias cd..='cd ..'
alias cd...='cd .. && cd ..'
alias cd-='cd -'

# python alias
alias py='python3'

